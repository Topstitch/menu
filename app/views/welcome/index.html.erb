<h1>The Frolicking Goat Cafe</h1>
<p><%= link_to 'New Item', new_item_path %></p>
<% @sections.each do |section| %>
<h3><%=section.name%></h3>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <% if item.section == section %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.description %></td>
      <td><%= item.price %></td>
    </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<% end %>
