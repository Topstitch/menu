<h1>The Frolicking Goat Cafe</h1>
<%= image_tag "frolic.jpg" %>
<p><%= link_to 'New Item', new_item_path %></p>
<% if @sections.length != nil %>
  <% @sections.each do |section| %>
  <h3><%=section.name%></h3>
  <%= image_tag section.picture %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <% if item.section == section %>
        <tr>
          <td><%= link_to item.name, edit_item_path(item.id) %></td>
          <td><%= item.description %></td>
          <td><%= number_to_currency(item.price) %></td>
        </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
